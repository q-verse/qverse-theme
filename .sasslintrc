files:
  include: "**/*.s+(a|c)ss"
  ignore:
    - node_modules/**
    - sass/vendor/**/*.*
syntax:
    include:
      - scss
options:
  optOut: true
  formatter: stylish
rules:
  space-around-operator: 0
  extends-before-mixins: 2
  extends-before-declarations: 2
  placeholder-in-extend: 2
  no-vendor-prefixes: 0
  no-color-literals: 0
  mixins-before-declarations:
  - 0
  - exclude:
    - breakpoint
    - mq
  no-warn: 0
  no-debug: 1
  pseudo-element: 0
  no-ids: 0
  no-important: 0
  nesting-depth:
    - 2
    - max-depth: 7
  hex-notation:
  - 2
  - style: uppercase
  indentation:
  - 4
  - size: 4
  property-sort-order:
  - 1
  - order:
    - display
    - margin
    ignore-custom-properties: true
  variable-for-property:
    - 1
  force-element-nesting: 0
  no-qualifying-elements: 0
  no-misspelled-properties: 0
  leading-zero: 0
